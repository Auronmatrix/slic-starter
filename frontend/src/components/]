import React, { Component } from 'react'
import PropTypes from 'prop-types'
import { connect } from 'react-redux'
import { Redirect } from 'react-router-dom'
import { confirmSignup } from '../actions/auth'
import { messages } from '../errors'
import MenuBar from './menuBar'
import { Button, Grid,  Paper, TextField, Typography } from '@material-ui/core'

class ConfirmSignup extends Component {
  state = {
    email: this.props,
    confirmationCode: ''
  }

  handleChange = ({ target: { id, value } }) => this.setState({ [id]: value })

  handleSubmit = event => {
    event.preventDefault()
    this.props.dispatch(confirmSignup(this.state))
  }

  render() {
    

    const {classes, confirmingSignup, confirmationError, signupConfirmed } = this.props

    console.log('ConfirmSignup props', this.props)

    const success = signupConfirmed ? (
      <div>
      <Grid item>

       <Typography>User Confirmed!</Typography>
      </Grid>
    </div>

    ) : null

        const failure = confirmationError ? (

    <div>

    <Grid item>
      <Typography>Confirmation Error!</Typography>
      console.log('state', this.state)
    </Grid>
      </div>


      ) : null

    return (
      <div>
        
      <Paper>
        <Grid
        container
        direction="column"
        justify="center"
        alignItems="stretch"
        spacing={8}
        >
      <Grid item> 
          <Typography variant="h2">Confirmation Code</Typography>
       </Grid>

      
            <form onSubmit={this.handleSubmit}>
       <Grid item>    
      <TextField
              id="confirmationCode"
              label="Confirmation Code"
              onChange={this.handleChange}
   />  
</Grid>
<Grid item>
            <Button vavriant="contained" color="secondary" type="submit" disabled={confirmingSignup}>
              Confirm Account
            </Button>
</Grid>
          </form>

          {success}
          {failure}
      </Grid> 
      </Paper>
      </div>
    )
  }
}

ConfirmSignup.propTypes = {
  auth: PropTypes.object.isRequired,
  dispatch: PropTypes.func.isRequired
}

const mapStateToProps = ({ auth }) => ({ auth })

export default connect(mapStateToProps)(ConfirmSignup)
