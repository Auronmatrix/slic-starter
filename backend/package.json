{
  "name": "slic-starter",
  "version": "1.0.0",
  "description": "Backend for SLIC Starter",
  "scripts": {
    "start": "SLIC_STAGE=local sls offline start --migrate",
    "lint": "eslint .",
    "coverage": "npm run test -- --cov --coverage-report=html",
    "format": "prettier --write \"**/*.js\"",
    "test": "tap \"test/**/*.test.js\" --branches=100 --statements=100 --functions=100 --lines=100"
  },
  "author": "Eoin Shanaghy <eoin.shanaghy@fourtheorem.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fourTheorem/slic-starter"
  },
  "devDependencies": {
    "@dathuis/serverless-dynamodb-local": "^0.2.40",
    "aws-sdk": "^2.339.0",
    "aws-sdk-mock": "^4.3.0",
    "eslint": "^5.13.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.1.3",
    "prettier": "1.14.3",
    "pretty-quick": "^1.8.0",
    "serverless-offline": "^3.25.6",
    "tap": "^12.5.2"
  },
  "dependencies": {
    "pino": "^5.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "nyc": {
    "exclude": [
      "**/test/**/*.js"
    ]
  }
}
